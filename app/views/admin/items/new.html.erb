<div class="container">
	<%= form_for @item, :url => {:action => :create} do |f| %>
	<div class="row row1 row2">
		<div class="col-xs-1"></div>
		<div class="col-xs-2 text">
			<p class="gray">商品新規登録</p>
		</div>
		<div class="col-xs-9"></div>
	</div>
	<div class="row">
		<div class="col-xs-4">
			<div>
			<%= f.attachment_field :image %>
			</div>
		</div>
		<div class="col-xs-5">
			<table  height="200px">
				<tbody>
					<tr>
						<td class="td-genre-table">商品名</td>
						<td colspan="2"><%= f.text_field :name %></td>
					</tr>
					<tr>
						<td class="td-genre-table">商品説明文</td>
						<td colspan="2"><%= f.text_area :description %></td>
					</tr>
					<tr>
						<td class="td-genre-table">ジャンル</td>
						<td colspan="2"><%= f.select :genre_id, Genre.all.map {|genre| [genre.name, genre.id]} %></td>
					</tr>
					<tr>
						<td class="td-genre-table">税抜価格</td>
						<td colspan="2"><%= f.text_field :price, data: { autonumeric: true } %>円</td>
					</tr>
					<tr>
						<td class="td-genre-table">販売ステータス</td>
						<td>
							<%= f.radio_button :sales_status, true %>販売中
						</td>
						<td>
							<%= f.radio_button :sales_status, false %>販売停止中
						</td>
					</tr>
				</tbody>
			</table>
		</div>
		<div class="col-xs-3"></div>
	</div>
	<div class="row row2">
		<div class="col-xs-9"></div>
		<div class="col-xs-3">
			<div>
				<%= f.submit "新規登録", class: "btn btn-primary" %>
			</div>
		</div>
	</div>
	<% end %>
</div>