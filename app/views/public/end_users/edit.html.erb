<div class="container">
	<div class="row row1 row2">
		<div class="col-xs-1"></div>
		<div class="col-xs-2 headline">
			<p class="gray">登録情報編集</p>
		</div>
		<div class="col-xs-9"></div>
	</div>
	<div class="row row2">
		<div class="col-xs-9">
			<%= form_for @user, url: public_end_users_path do |f| %>
			<table>
				<tbody>
					<tr>
						<td class="td-headline1">名前</td>
						<td>(姓)</td>
						<td><%= f.text_field :first_name, class: "form" %></td>
						<td>(名)</td>
						<td><%= f.text_field :last_name, class: "form" %></td>
					</tr>
					<tr>
						<td class="td-headline1">フリガナ</td>
						<td>(セイ)</td>
						<td><%= f.text_field :first_name_kana, class: "form" %></td>
						<td>(メイ)</td>
						<td><%= f.text_field :last_name_kana, class: "form" %></td>
					</tr>
					<tr>
						<td class="td-headline1">メールアドレス</td>
						<td></td>
						<td><%= f.email_field :email ,class: "form" %></td>
						<td colspan="2"></td>
					</tr>
					<tr>
						<td class="td-headline1">郵便番号(ハイフンなし)</td>
						<td></td>
						<td><%= f.text_field :postal_code,class: "form"  %></td>
						<td colspan="2"></td>
					</tr>
					<tr>
						<td>住所</td>
						<td></td>
						<td colspan="3"><%= f.text_field :address,class: "form"  %></td>
					</tr>
					<tr>
						<td class="td-headline1">電話番号(ハイフンなし)</td>
						<td></td>
						<td><%= f.text_field :phone_number,class: "form"  %></td>
						<td colspan="2"></td>
					</tr>
					<tr>
						<td class="td-headline1"></td>
						<td colspan="2"><%= f.submit "編集内容を保存する", class: "btn btn-primary submit" %></td>
						<td></td>
						<td><%= link_to "退会する",public_end_users_confirm_path, class: "btn btn-danger submit" %></td>
					</tr>
				</tbody>
			</table>
			<% end %>
		</div>
		<div class="col-xs-3"></div>
	</div>
	<div class="row"></div>
</div>
