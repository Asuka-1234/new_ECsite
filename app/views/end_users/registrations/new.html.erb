<div class="container">
  <div class="row row1">
    <div class="col-xs-2"></div>
    <div class="col-xs-3 headline">
      <p class="new">新規会員登録</p>
    </div>
    <div class="col-xs-7"></div>
  </div>
  <div class="row registration-table-box">
    <div class="col-xs-3"></div>
    <div class="col-xs-9">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <table>
      <tbody>
        <tr>
          <td>名前</td>
          <td>(姓)</td>
          <td>
            <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: 'form' %></td>
          <td>(名)</td>
          <td>
            <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: 'form' %>
          </td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td>(セイ)</td>
          <td>
            <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", class: 'form' %>
          </td>
          <td>(メイ)</td>
          <td>
            <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", class: 'form' %>
          </td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td></td>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form' %></td>
          <td colspan="2"></td>
        </tr>
        <tr>
          <td>郵便番号(ハイフンなし)</td>
          <td></td>
          <td><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class: 'form' %></td>
          <td colspan="2"></td>
        </tr>
        <tr>
          <td>住所</td>
          <td></td>
          <td colspan="3"><%= f.text_field :address, autofocus: true, autocomplete: "address", class: 'form' %></td>
        </tr>
        <tr>
          <td>電話番号(ハイフンなし)</td>
          <td></td>
          <td><%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number", class: 'form' %></td>
          <td colspan="2"></td>
        </tr>
        <tr>
          <td>
            パスワード<% if @minimum_password_length %>
          　(<%= @minimum_password_length %>文字以上)
          　<% end %>
          </td>
          <td></td>
          <td><%= f.password_field :encrypted_password, autocomplete: "new-password", class: 'form' %></td>
          <td colspan="2"></td>
        </tr>
        <tr>
          <td>パスワード(確認用)</td>
          <td></td>
          <td><%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form' %></td>
          <td colspan="2"></td>
        </tr>
      </tbody>
    </table>
    </div>
  </div>
  <div class="row row2">
    <div class="col-xs-6"></div>
    <div class="col-xs-4">
      <%= f.submit "新規登録", class: 'btn btn-success w-50' %>
      <% end %>
    </div>
    <div class="col-xs-2"></div>
  </div>
  <div class="row">
    <div class="col-xs-2"></div>
    <div class="col-xs-3 headline">
      <p class="new">既に登録済みの方</p>
    </div>
    <div class="col-xs-7"></div>
  </div>
  <div class="row row2">
    <div class="col-xs-4"></div>
    <div class="col-xs-8 text">
      <%= render "end_users/shared/links" %>
    </div>
  </div>
</div>